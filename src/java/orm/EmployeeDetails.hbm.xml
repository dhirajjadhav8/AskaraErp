<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="orm.EmployeeDetails" table="EMPLOYEE_DETAILS" schema="ERP">
        <id name="id" type="int">
            <column name="ID" />
            <generator class="native" />
        </id>
        <many-to-one name="projects" class="orm.Projects" fetch="select">
            <column name="PROJECTID" not-null="true">
                <comment/>
            </column>
        </many-to-one>  
        <many-to-one name="locations" class="orm.Locations" fetch="select">
            <column name="LOCATIONID" not-null="true">
                <comment/>
            </column>
        </many-to-one>
        <many-to-one name="designations" class="orm.Designations" fetch="select">
            <column name="DESIGNATIONID" not-null="true">
                <comment/>
            </column>
        </many-to-one>
        <many-to-one name="departments" class="orm.Departments" fetch="select">
            <column name="DEPARTMENTID" not-null="true">
                <comment/>
            </column>
        </many-to-one> 
        <many-to-one name="employees" class="orm.Employees" fetch="select">
            <column name="EMPLOYEEID" not-null="true">
                <comment/>
            </column>
        </many-to-one> 
        <property name="startDate" type="date">
            <column name="START_DATE" length="10" />
        </property>
        <property name="endDate" type="date">
            <column name="END_DATE" length="10" />
        </property>
        <property name="endReason" type="string">
            <column name="END_REASON" />
        </property>
        <property name="createdby" type="int">
            <column name="CREATEDBY" not-null="true" />
        </property>
        <property name="createdon" type="timestamp">
            <column name="CREATEDON" length="29" not-null="true" />
        </property>
    </class>
</hibernate-mapping>
